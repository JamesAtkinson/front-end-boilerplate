{
    "extends": "stylelint-config-sass-guidelines",
    "rules": {
        "indentation": 4,
        "selector-class-pattern": [
            "^[a-z0-9\\-\\_]+$",
            {
                "message":
                    "Selector should be written in lowercase with hyphens and/or underscores"
            }
        ]
    }
}
